@using WebBanGiayConverse.Models
@model IEnumerable<SanPham>
<div class=" h_menu4">
    <ul class="memenu skyblue">
        <li class="showhide" style="display: none;"><span class="title">MENU</span><span class="icon1"></span><span class="icon2"></span></li>
        <li class="active grid" style="display: inline;"><a class="color8" href="@Url.Action("Index", "Home")">Trang chủ</a></li>
        <li style="display: inline;">
            <a class="color1" href="#">Thương hiệu</a>
            <div class="mepanel" style="display: none;">
                <div class="row">
                    @foreach (var groupItem in Model.GroupBy(n => n.TheLoai))
                    {
                        if (groupItem.Key != null)
                        {


                            <div class="col1">
                                <div class="h_nav">
                                    <ul>
                                        <li><a href="@Url.Action("SanPham", "SanPham", new {@IDLoaiSP = groupItem.Key.MaLoai})">@groupItem.Key.Ten</a></li>
                                    </ul>
                                </div>
                            </div>
                        }

                    }

                </div>
            </div>
        </li>
        <li style="display: inline;"><a class="color4" href="#">Giới thiệu</a></li>
        <li style="display: inline;"><a class="color6" href="#">Liên hệ</a></li>
    </ul>
</div>
<h2>Sản phẩm đã hết hàng</h2>
