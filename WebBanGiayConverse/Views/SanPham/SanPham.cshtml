@model IEnumerable<WebBanGiayConverse.Models.SanPham>

@{
    ViewBag.Title = "SanPham";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}
<div class="col-md-9 product1">
    <div class=" bottom-product">
        @foreach (var item in Model)
        {

            <div class="col-md-4 bottom-cd simpleCart_shelfItem">
                <div class="product-at ">
                    <a href="@Url.Action("XemChiTiet", "SanPham", new {id=item.ID})">
                        <img class="img-responsive" src="@Url.Content(item.Anh)" alt="">
                        <div class="pro-grid">
                            <span class="buy-in">Buy Now</span>
                        </div>
                    </a>
                </div>
                <p class="tun">@item.Ten</p>
                <a href="#" class="item_add"><p class="number item_price"><i> </i>@item.Gia Đ</p></a>
            </div>
        }

        <div class="clearfix"> </div>
    </div>

</div>

