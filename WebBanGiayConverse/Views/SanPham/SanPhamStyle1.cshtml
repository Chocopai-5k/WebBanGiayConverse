@model IEnumerable<WebBanGiayConverse.Models.SanPham>

<div class="content-top">
    <div class="grid-in">
        @foreach (var item in Model)
        {
            <div class="col-md-4 grid-top">
                <a href="@Url.Action("XemChiTiet","SanPham", new { id = item.MaSP })" class="b-link-stripe b-animate-go  thickbox">
                    <img class="img-responsive" src="@Url.Content("~/Content/HinhAnhSP/"+item.Anh)" alt="">
                    <div class="b-wrapper">
                        <h3 class="b-animate b-from-left b-delay03 ">
                            <span>@item.Gia.Value.ToString("#,##") VNĐ</span>
                        </h3>
                    </div>
                </a>
                <p><a href="@Url.Action("XemChiTiet","SanPham", new { id = item.MaSP })">@item.TenSP</a></p>
            </div>
        }
    </div>
</div>
