@using WebBanGiayConverse.Models
@model IEnumerable<SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    //Khởi tạo webgrid
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 5);
}
@Html.ActionLink("Thêm sản phẩm", "Them",null, new {@class = "btn btn-success"})
@grid.GetHtml(
    tableStyle: "gridTable",
    headerStyle: "gridHead" ,
    footerStyle: "gridFooter",
    rowStyle: "gridRow",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
        grid.Column("ID", "Mã sản phẩm"),
        grid.Column("Ten", "Tên sản phẩm"),
        //grid.Column("MoTa", "Mô tả sản phẩm", format:p=> Html.Raw(p.MoTa)),
        grid.Column("Anh", "Hình ảnh sản phẩm", format: p => Html.Raw("<img width=\"200\" height=\"200\"src=\"../Content/HinhAnhSP/" + p.Anh+"\">" )),
        grid.Column(format: p=> Html.ActionLink("Chỉnh sửa", "ChinhSua", new {id=p.ID})),
        grid.Column(format: p => Html.ActionLink("Xóa", "Xoa", new { id = p.ID }))
        ))

<style>
    .gridTable {
        width:100%;
        border: 1px solid #999999;
    }
    .gridTable td {
        border:1px solid #999999
    }
</style>

<style>
    .FooterAdmin {
        display: none;
    }
</style>
