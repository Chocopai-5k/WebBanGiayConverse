@using WebBanGiayConverse.Models
@model IEnumerable<TheLoai>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    //Khởi tạo webgrid
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 5);
}
@Html.ActionLink("Thêm thể loại", "Them",null, new { @class = "btn btn-success" })
@grid.GetHtml(
    tableStyle: "gridTable",
    headerStyle: "gridHead",
    footerStyle: "gridFooter",
    rowStyle: "gridRow",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
        grid.Column("ID", "Mã thể loại"),
        grid.Column("Ten", "Tên thể loại"),
        grid.Column(format: p => Html.ActionLink("Chỉnh sửa", "ChinhSua","TheLoai", new { id = p.ID })),
        grid.Column(format: p => Html.ActionLink("Xóa", "Xoa", new { id = p.ID }))
        ))

<style>
    .gridTable {
        width: 100%;
        border: 1px solid #999999;
    }

        .gridTable td {
            border: 1px solid #999999
        }
</style>

<style>
    .FooterAdmin {
        display: none;
    }
</style>

